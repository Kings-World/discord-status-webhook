{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true,
        "defaultBranch": "main"
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 150,
        "useEditorconfig": true
    },
    "files": {
        "ignoreUnknown": true,
        "ignore": [".yarn/**", "node_modules/**"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "noUnusedTemplateLiteral": {
                    "level": "warn",
                    "fix": "safe"
                }
            },
            "correctness": {
                "noUnusedImports": {
                    "level": "warn",
                    "fix": "safe"
                }
            },
            "suspicious": {
                "noGlobalIsNan": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "trailingCommas": "all",
            "semicolons": "always",
            "quoteStyle": "double"
        }
    }
}
